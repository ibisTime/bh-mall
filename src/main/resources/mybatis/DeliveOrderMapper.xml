<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bh.mall.dao.IDeliveOrderDAO">
	<resultMap id="deliveOrder_DB_Result" type="deliveOrder">
		<result column="code" property="code" />
		<result column="kind" property="kind" />
		<result column="product_code" property="productCode" />
		<result column="product_name" property="productName" />
		<result column="specs_code" property="specsCode" />
		
		<result column="specs_name" property="specsName" />
		<result column="pic" property="pic" />
		<result column="quantity" property="quantity" />
		<result column="price" property="price" />
		<result column="amount" property="amount" />
	
		<result column="yunfei" property="yunfei" />
		<result column="status" property="status" />
		<result column="apply_user" property="applyUser" />
		<result column="apply_datetime" property="applyDatetime" />
		<result column="real_name" property="realName" />
		<result column="apply_note" property="applyNote" />
	
		<result column="signer" property="signer" />
		<result column="mobile" property="mobile" />
		<result column="province" property="province" />
		<result column="city" property="city" />
		<result column="area" property="area" />
		
		<result column="address" property="address" />
		<result column="deliver" property="deliver" />
		<result column="delive_datetime" property="deliveDatetime" />
		<result column="logistics_code" property="logisticsCode" />
		<result column="logistics_company" property="logisticsCompany" />
		
		<result column="bar_code" property="barCode" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="kind != null and kind != '' ">
				AND t.kind = #{kind}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
			
			<if test="keyword != null and keyword != '' ">
				AND (t.real_name like "%"#{keyword}"%" OR t.signer like "%"#{keyword}"%")
			</if>
			
		</trim>
	</sql>
	<select id="select_deliveOrder" parameterType="deliveOrder" resultMap="deliveOrder_DB_Result">
		SELECT
		t.code
		,t.kind
		,t.product_code
		,t.product_name
		,t.specs_code
		,t.specs_name
		,t.pic
		,t.quantity
		,t.price
		,t.amount
		,t.yunfei
		,t.status
		,t.apply_user
		,t.apply_datetime
		,t.real_name
		,t.apply_note
		,t.signer
		,t.mobile
		,t.province
		,t.city
		,t.area
		,t.address
		,t.deliver
		,t.delive_datetime
		,t.logistics_code
		,t.logistics_company
		,t.bar_code
		FROM
		tbh_delive_order t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_deliveOrder_count" parameterType="deliveOrder"
		resultType="java.lang.Long">
		SELECT count(1) FROM tbh_delive_order t
		<include refid="where_condition" />
	</select>

	<insert id="insert_deliveOrder" parameterType="deliveOrder">
		INSERT INTO
		tbh_delive_order(
		code
		,kind
		,product_code
		,product_name
		,specs_code
		,specs_name
		,pic
		,quantity
		,price
		,amount
		,yunfei
		,status
		,apply_user
		,apply_datetime
		,real_name
		,apply_note
		,signer
		,mobile
		,province
		,city
		,area
		,address
		,deliver
		,delive_datetime
		,logistics_code
		,logistics_company
		,bar_code
		)
		VALUES(
		#{code}
		,#{kind}
		,#{productCode}
		,#{productName}
		,#{specsCode}
		,#{specsName}
		,#{pic}
		,#{quantity}
		,#{price}
		,#{amount}
		,#{yunfei}
		,#{status}
		,#{applyUser}
		,#{applyDatetime}
		,#{realName}
		,#{applyNote}
		,#{signer}
		,#{mobile}
		,#{province}
		,#{city}
		,#{area}
		,#{address}
		,#{deliver}
		,#{deliveDatetime}
		,#{logisticsCode}
		,#{logisticsCompany}
		,#{barCode}
		)
	</insert>

	<update id="update_deliveOrder" parameterType="deliveOrder">
		UPDATE tbh_delive_order
		SET
		kind = #{kind}
		,product_code = #{productCode}
		,product_name = #{productName}
		,specs_code = #{specsCode}
		,specs_name = #{specsName}
		,pic = #{pic}
		,quantity = #{quantity}
		,price = #{price}
		,amount = #{amount}
		,yunfei = #{yunfei}
		,status = #{status}
		,apply_user = #{applyUser}
		,real_name = #{realName}
		,apply_note = #{applyNote}
		,signer = #{signer}
		,mobile = #{mobile}
		,province = #{province}
		,city = #{city}
		,area = #{area}
		,address = #{address}
		,deliver = #{deliver}
		,delive_datetime = #{deliveDatetime}
		,logistics_code = #{logisticsCode}
		,logistics_company = #{logisticsCompany}
		,bar_code = #{barCode}
		WHERE code = #{code}
	</update>

	<update id="delive_Order" parameterType="deliveOrder">
		UPDATE tbh_delive_order
		SET
		status = #{status}
		,deliver = #{deliver}
		,delive_datetime = #{deliveDatetime}
		,logistics_code = #{logisticsCode}
		,logistics_company = #{logisticsCompany}
		,bar_code = #{barCode}
		WHERE code = #{code}
	</update>

</mapper>