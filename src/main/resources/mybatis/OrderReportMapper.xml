	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="type != null and type != '' ">
				AND t.type = #{type}
			</if>
			<if test="kind != null and kind != '' ">
				AND t.kind = #{kind}
			</if>
			
			<if test="applyUser != null and applyUser != '' ">
				AND t.apply_user = #{applyUser}
			</if>
			<if test="toUserId != null and toUserId != '' ">
				AND t.to_user_id = #{toUserId}
			</if>
			<if test="startDatetime != null and startDatetime != ''">
				<![CDATA[AND t.apply_datetime >= #{startDatetime} ]]>
			</if>
			<if test="endDatetime != null and endDatetime != ''">
				<![CDATA[AND t.apply_datetime <= #{endDatetime}]]>
			</if>
		</trim>
	</sql>
	<select id="select_orderReport" parameterType="orderReport" resultMap="orderReport_DB_Result">
		SELECT
		t.code
		,t.kind
		,t.type
		,t.product_code
		,t.product_name
		
		,t.specs_code
		,t.specs_name
		,t.pic
		,t.quantity
		,t.price
		
		,t.to_user_id
		,t.to_user_name
		,t.amount
		,t.yunfei
		,t.status
		,t.pay_type
		,t.pay_group
		,t.pay_amount
		,t.pay_datetime
		,t.pay_code
		,t.apply_user
		,t.high_user_id
		,t.level
		,t.real_name
		,t.team_name
		,t.team_leader
		,t.apply_note
		,t.apply_datetime
		,t.signer
		,t.mobile
		,t.province
		,t.city
		,t.area
		,t.address
		,t.deliver
		,t.delive_datetime
		,t.logistics_code
		,t.logistics_company
		,t.updater
		,t.update_datetime
		,t.update_note
		,t.approver
		,t.approve_datetime
		,t.approve_note
		,t.remark
		FROM
		tbh_order_report t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_orderReport_count" parameterType="orderReport"
		resultType="java.lang.Long">
		SELECT count(1) FROM tbh_order_report t
		<include refid="where_condition" />
	</select>

