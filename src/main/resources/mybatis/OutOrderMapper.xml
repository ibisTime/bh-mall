<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bh.mall.dao.IOutOrderDAO">
	<resultMap id="order_DB_Result" type="outOrder">
		<result column="code" property="code" />
		<result column="is_ware_send" property="isWareSend" />
		<result column="kind" property="kind" />
		<result column="product_code" property="productCode" />
		
		<result column="product_name" property="productName" />
		<result column="specs_code" property="specsCode" />
		<result column="specs_name" property="specsName" />
		<result column="pro_code" property="proCode" />
		<result column="pic" property="pic" />
		<result column="quantity" property="quantity" />
		
		<result column="price" property="price" />
		<result column="to_user_id" property="toUserId" />
		<result column="to_user_name" property="toUserName"  />
		<result column="amount" property="amount" />
		<result column="yunfei" property="yunfei" />
		<result column="status" property="status" />
		
		<result column="pay_type" property="payType" />
		<result column="pay_group" property="payGroup" />
		<result column="pay_amount" property="payAmount" />
		<result column="pay_datetime" property="payDatetime" />
		<result column="pay_code" property="payCode" />
		
		<result column="apply_user" property="applyUser" />
		<result column="high_user_id" property="highUserId" />
		<result column="level" property="level" />
		<result column="real_name" property="realName" />
		<result column="team_name" property="teamName" />
		<result column="apply_datetime" property="applyDatetime" />
		
		<result column="apply_note" property="applyNote" />
		<result column="signer" property="signer" />
		<result column="mobile" property="mobile" />
		<result column="province" property="province" />
		<result column="city" property="city" />
		
		<result column="area" property="area" />
		<result column="address" property="address" />
		<result column="deliver" property="deliver" />
		<result column="delive_datetime" property="deliveDatetime" />
		<result column="logistics_code" property="logisticsCode" />
		
		<result column="logistics_company" property="logisticsCompany" />
		<result column="pro_code" property="proCode" />
		<result column="updater" property="updater" />
		<result column="update_datetime" property="updateDatetime" />
		<result column="update_note" property="updateNote" />
		
		<result column="approver" property="approver" />
		<result column="approve_datetime" property="approveDatetime" />
		<result column="approve_note" property="approveNote" />
		<result column="remark" property="remark" />
	</resultMap>
	
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<choose>
				<when test="kind != null and kind != '' ">
					AND t.kind = #{kind}
				</when>
				<when test="kindList != null and kindList.size() > 0 ">
					AND t.kind IN 
					<foreach collection="kindList" index="index" item="item" open="(" separator="," close=")">
						#{item}
					</foreach>
				</when>
			</choose>
			<if test="applyUser != null and applyUser != '' ">
				AND t.apply_user = #{applyUser}
			</if>
			<if test="toUserId != null and toUserId != '' ">
				AND t.to_user_id = #{toUserId}
			</if>
			<if test="statusForQuery != null and statusForQuery != '' ">
				AND t.status IN ${statusForQuery}
			</if>
			<choose>
				<when test="status != null and status != '' ">
					AND t.status = #{status}
				</when>
				<when test="statusList != null and statusList.size() > 0 ">
					AND t.status IN
					<foreach collection="statusList" index="index" item="item" open="(" separator="," close=")">
						#{item}
					</foreach>
				</when>
			</choose>
			<if test="keyword != null and keyword != '' ">
				AND (t.product_name like "%"#{keyword}"%" or t.real_name like "%"#{keyword}"%" or t.team_name like "%"#{keyword}"%" )
			</if>
			<if test="startDatetime != null and startDatetime != ''">
				<![CDATA[AND t.apply_datetime >= #{startDatetime} ]]>
			</if>
			<if test="endDatetime != null and endDatetime != ''">
				<![CDATA[AND t.apply_datetime <= #{endDatetime}]]>
			</if>
			
			<if test="proCode != null and proCode != '' ">
				AND t.pro_code = #{proCode}
			</if>
			<if test="deliver != null and deliver != '' ">
				AND t.deliver = #{deliver}
			</if>
		</trim>
	</sql>
	
	
	<select id="select_outOrder" parameterType="outOrder" resultMap="order_DB_Result">
		SELECT
		t.code
		,t.is_ware_send
		,t.kind
		,t.product_code
		
		,t.product_name
		,t.specs_code
		,t.specs_name
		,t.pro_code
		,t.pic
		,t.quantity
		
		,t.price
		,t.to_user_id
		,t.amount
		,t.yunfei
		,t.status
		
		,t.pay_type
		,t.pay_group
		,t.pay_amount
		,t.pay_datetime
		,t.pay_code
		
		,t.apply_user
		,t.level
		,t.real_name
		,t.team_name
		,t.apply_datetime
		,t.apply_note
		,t.signer
		
		,t.mobile
		,t.province
		,t.city
		,t.area
		,t.address
		
		,t.deliver
		,t.delive_datetime
		,t.logistics_code
		,t.logistics_company
		,t.pro_code
		
		,t.updater
		,t.update_datetime
		,t.update_note
		,t.approver
		,t.approve_datetime
		
		,t.approve_note
		,t.remark
		FROM
		tbh_out_order t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>
	

	<select id="select_outOrder_count" parameterType="outOrder"
		resultType="java.lang.Long">
		SELECT count(1) FROM tbh_out_order t 
		<include refid="where_condition" />
	</select>

	<insert id="insert_outOrder" parameterType="outOrder">
		INSERT INTO
		tbh_out_order(
		code
		,is_ware_send
		,kind
		,product_code
		,product_name
		
		,specs_code
		,specs_name
		,pro_code
		,pic
		,quantity
		,price
		
		,to_user_id
		,amount
		,yunfei
		,status
		,apply_user
		,level

		,real_name
		,team_name		
		,apply_datetime
		,apply_note
		,signer
		,mobile
		
		,province
		,city
		,area
		,address
		)
		VALUES(
		#{code}
		,#{isWareSend}
		,#{kind}
		,#{productCode}
		,#{productName}
		
		,#{specsCode}
		,#{specsName}
		,#{proCode}
		,#{pic}
		,#{quantity}
		,#{price}
		
		,#{toUserId}
		,#{amount}
		,#{yunfei}
		,#{status}
		,#{applyUser}
		,#{level}

		,#{realName}
		,#{teamName}		
		,#{applyDatetime}
		,#{applyNote}
		,#{signer}
		,#{mobile}
		
		,#{province}
		,#{city}
		,#{area}
		,#{address}
		)
	</insert>

	<update id="update_outOrder" parameterType="outOrder">
		UPDATE tbh_out_order
		SET
		signer = #{signer}
		,mobile = #{mobile}
		,province = #{province}
		,city = #{city}
		,area = #{area}
		,address = #{address}
		
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,update_note = #{updateNote}
		WHERE code = #{code}
	</update>
	
	<update id="pay_outOrder" parameterType="outOrder">
		UPDATE tbh_out_order
		SET
		pay_code = #{pay_code}
		,pay_group = #{pay_group}
		,pay_type = #{pay_type}
		,pay_datetime = #{pay_datetime}
		,pay_amount = #{pay_amount}
		,status = #{status}
		WHERE code = #{code}
	</update>
	
	<update id="deliver_outOrder" parameterType="outOrder">
		UPDATE tbh_out_order
		SET
		deliver = #{deliver}
		,delive_datetime = #{deliveDatetime}
		,logistics_code = #{logisticsCode}
		,logistics_company = #{logisticsCompany}
		
		
		,pro_code = #{proCode}
		,is_ware_send = #{isWareSend}
		,status = #{status}
		,remark = #{remark}
		WHERE code = #{code}
	</update>

	<update id="approve_outOrder" parameterType="outOrder">
		UPDATE tbh_out_order
		SET
		status = #{status}
		,approver = #{approver}
		,approve_datetime = #{approveDatetime}
		,approve_note = #{approveNote}
		,status = #{status}
		WHERE code = #{code}
	</update>
	
	<update id="update_status" parameterType="outOrder">
		UPDATE tbh_out_order
		SET
		status = #{status}
		WHERE code = #{code}
	</update>
	
	<update id="approve_cancel" parameterType="outOrder">
		UPDATE tbh_out_order
		SET
		status = #{status}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>


	<update id="add_payGroup" parameterType="innerOrder">
		UPDATE tbh_out_order
		SET
		pay_group = #{payGroup}
		,pay_type = #{payType}
		WHERE code = #{code}
	</update>
	
	<update id="pay_no" parameterType="innerOrder">
		UPDATE tbh_out_order
		SET
		status = #{status}
		,pay_group = #{payGroup}
		,pay_type = #{payType}
		WHERE code = #{code}
	</update>
	
	
	<update id="pay_success" parameterType="innerOrder">
		UPDATE tbh_out_order
		SET
		status = #{status}
		,pay_type = #{payType}
		,pay_code = #{payCode}
		,pay_amount = #{payAmount}
		,pay_datetime = #{payDatetime}
		WHERE code = #{code}
	</update>
	
	<update id="invalid_outOrder" parameterType="innerOrder">
		UPDATE tbh_out_order
		SET
		status = #{status}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>
	
	<delete id="delete_outOrder" parameterType="innerOrder">
		DELETE FROM
		tbh_out_order
		WHERE
		code = #{code}
	</delete>
</mapper>