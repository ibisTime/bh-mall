<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bh.mall.dao.ISjFormDAO">
	<resultMap id="sjForm_DB_Result" type="sjForm">
		<result column="code" property="code" />
		<result column="user_id" property="userId" />
		<resule column="to_user_id" property="toUserId"/>
		<result column="apply_level" property="applyLevel" />
		<result column="re_number" property="reNumber" />
		<result column="pay_amount" property="payAmount" />
		<result column="pay_pdf" property="payPdf" />
		<result column="status" property="status" />
		<result column="approver" property="approver" />
		<result column="apply_datetime" property="applyDatetime" />
		<result column="approve_datetime" property="approveDatetime" />
		<result column="remark" property="remark" />
	</resultMap>
	
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
		
			
			<if test="userId != null and userId != '' ">
				AND t.user_id = #{userId}
			</if>
			
			<if test="approver != null and approver != '' ">
				AND t.approver = #{approver}
			</if>
			
	
			<choose>
				<when test="status == '6,8,12' "> <!-- 待审核授权，申请取消授权， 升级申请-->
					AND t.status = '6' OR t.status = '8' 
				</when>
				<otherwise>
					AND 1=1
				</otherwise>
			</choose>
			

			<if test="applyLevel != null and applyLevel != '' ">
				AND t.apply_level = #{applyLevel}
			</if>
			
					
			<if test="reNumber != null and reNumber != '' ">
				AND u.re_number = #{reNumber}
			</if>
			<if test="applyDatetimeStart != null and applyDatetimeStart != '' ">
				<![CDATA[AND t.apply_datetime >= #{applyDatetimeStart}]]>
			</if>
			<if test="applyDatetimeEnd != null and applyDatetimeEnd != '' ">
				<![CDATA[AND t.apply_datetime <= #{applyDatetimeEnd}]]>
			</if>
			
			<if test="approveDatetimeStart != null and approveDatetimeStart != '' ">
				<![CDATA[AND t.approve_datetime >= #{approveDatetimeStart}]]>
			</if>
			<if test="approveDatetimeEnd != null and approveDatetimeEnd != '' ">
				<![CDATA[AND t.approve_datetime <= #{approveDatetimeEnd}]]>
			</if>
			
		</trim>
	</sql>
	
	<select id="select_sjForm" parameterType="sjForm" resultMap="sjForm_DB_Result">
		SELECT
		t.code
		,t.user_id
		,t.to_user_id
		,t.apply_level
		,t.re_number
		,t.pay_amount
		,t.pay_pdf
		,t.status
		,t.approver
		,t.apply_datetime
		,t.approve_datetime
		,t.remark
		FROM
		tbh_sj_form t LEFT JOIN tbh_buser u ON t.user_id = u.user_id   
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_sjForm_count" parameterType="sjForm"
		resultType="java.lang.Long">
		SELECT count(1) FROM tbh_sj_form t LEFT JOIN tbh_buser u ON t.user_id = u.user_id   
		<include refid="where_condition" />
	</select>

	<insert id="insert_sjForm" parameterType="sjForm">
		INSERT INTO
		tbh_sj_form(
		code
		,user_id
		,to_user_id
		,apply_level
		,re_number
	    ,pay_amount
		,pay_pdf
		,status
		,approver
		,apply_datetime
		,approve_datetime
		,remark
		)
		VALUES(
		#{code}
        ,#{userId}
        ,#{toUserId}
		,#{applyLevel}	
		,#{reNumber}
		,#{payAmount}
		,#{payPdf}
		,#{status}
		,#{approver}
		,#{applyDatetime}
		,#{approveDatetime}
		,#{remark}
		)
	</insert>
	
	
	<!-- update payment / status -->
	<update id="update_sjForm" parameterType="sjForm">
		UPDATE tbh_sj_form
		SET
		user_id = #{userId}
		,to_user_id=#{toUserId}
		,apply_level = #{applyLevel}
		,re_number = #{reNumber}
        ,pay_amount = #{payAmount}
		,pay_pdf = #{payPdf}
		,status = #{status}
		,approver = #{approver}
		,apply_datetime = #{applyDatetime}
		,approve_datetime = #{approveDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>
	
	
</mapper>