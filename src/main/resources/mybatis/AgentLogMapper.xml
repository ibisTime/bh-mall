<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bh.mall.dao.IAgentLogDAO">
	<resultMap id="agentLog_DB_Result" type="agentLog">
		<result column="code" property="code" />
		<result column="type" property="type" />
		<result column="apply_user" property="applyUser" />
		<result column="real_name" property="realName" />
		<result column="wx_id" property="wxId" />
		<result column="mobile" property="mobile" />
		
		<result column="to_user_id" property="toUserId" />
		<result column="level" property="level" />
		<result column="apply_level" property="applyLevel" />
		<result column="high_user_id" property="highUserId" />
		<result column="referrer" property="referrer" />
				
		<result column="team_name" property="teamName" />
		<result column="pay_amount" property="payAmount" />
		<result column="pay_pdf" property="payPdf" />
		<result column="status" property="status" />
		<result column="apply_datetime" property="applyDatetime" />
		
		<result column="approver" property="approver" />
		<result column="approve_name" property="approveName" />
		<result column="approve_datetime" property="approveDatetime" />
		<result column="updater" property="updater" />
		<result column="update_datetime" property="updateDatetime" />
		
		<result column="impower_datetime" property="impowerDatetime" />
		<result column="remark" property="remark" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="type != null and type != '' ">
				AND t.type = #{type}
			</if>
			
			<if test="applyUser != null and applyUser != '' ">
				AND t.apply_user = #{applyUser}
			</if>
			<if test="toUserId != null and toUserId != '' ">
				AND t.to_user_id = #{toUserId}
			</if>
			<if test="approver != null and approver != '' ">
				AND t.approver = #{approver}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
			
			<if test="keyword != null and keyword != ''">
				AND (t.wx_id LIKE "%#{keyword}%" OR t.real_name LIKE "%#{keyword}%" OR t.team_name LIKE "%#{keyword}%")
			</if>
			
			<if test="level != null and level != '' ">
				AND t.level = #{level}
			</if>
			<if test="applyLevel != null and applyLevel != '' ">
				AND t.apply_level = #{applyLevel}
			</if>
			<if test="applyDatetimeStart != null and applyDatetimeStart != '' ">
				<![CDATA[AND t.apply_datetime >= #{applyDatetimeStart}]]>
			</if>
			<if test="applyDatetimeEnd != null and applyDatetimeEnd != '' ">
				<![CDATA[AND t.apply_datetime <= #{applyDatetimeEnd}]]>
			</if>
			
			<if test="approveDatetimeStart != null and approveDatetimeStart != '' ">
				<![CDATA[AND t.approve_datetime >= #{approveDatetimeStart}]]>
			</if>
			<if test="approveDatetimeEnd != null and approveDatetimeEnd != '' ">
				<![CDATA[AND t.approve_datetime <= #{approveDatetimeEnd}]]>
			</if>
		</trim>
	</sql>
	
	<select id="select_agentLog" parameterType="agentLog" resultMap="agentLog_DB_Result">
		SELECT
		t.code
		,t.type
		,t.apply_user
		,t.real_name
		,t.wx_id
		,t.mobile
		
		
		,t.to_user_id
		,t.level
		,t.apply_level
		,t.high_user_id
		,t.referrer
		,t.introducer
		
		,t.team_name
		,t.pay_amount
		,t.pay_pdf
		,t.province
		,t.city
		
		,t.area
		,t.address
		,t.status
		,t.apply_datetime
		,t.approver
		
		,t.approve_name
		,t.approve_datetime
		,t.updater
		,t.update_datetime
		,t.impower_datetime
		,t.remark
		FROM
		tbh_agent_log t 
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_agentLog_count" parameterType="agentLog"
		resultType="java.lang.Long">
		SELECT count(1) FROM tbh_agent_log t 
		<include refid="where_condition" />
	</select>

	<insert id="insert_agentLog" parameterType="agentLog">
		INSERT INTO
		tbh_agent_log(
		code
		,type
		,apply_user
		,real_name
		,wx_id
		,mobile
		
		
		,to_user_id
		,level
		,apply_level
		,high_user_id
		,referrer
		,introducer
		
		,team_name
		,pay_amount
		,pay_pdf
		,province
		,city
		
		,area
		,address
		,status
		,apply_datetime
		,approver
		
		,approve_name
		,approve_datetime
		,updater
		,update_datetime
		,impower_datetime
		,remark
		)
		VALUES(
		#{code}
		,#{type}
		,#{applyUser}
		,#{realName}
		,#{wxId}
		,#{mobile}
		
		,#{toUserId}
		,#{level}
		,#{applyLevel}
		,#{highUserId}
		,#{referrer}
		,#{introducer}
		,#{teamName}
		,#{payAmount}
		,#{payPdf}
		,#{province}
		,#{city}
		 
		,#{area}
		,#{address}
		,#{status}
		,#{applyDatetime}
		,#{approver}
		
		,#{approveName}
		,#{approveDatetime}
		,#{updater}
		,#{updateDatetime}
		,#{impowerDatetime}
		,#{remark}
		)
	</insert>

	<update id="update_agentLog" parameterType="agentLog">
		UPDATE tbh_agent_log
		SET
		to_user_id = #{toUserId}
		,apply_user = #{applyUser}
		,apply_datetime = #{applyDatetime}
		,level = #{level}
		,apply_level = #{applyLevel}
		,high_user_id = #{highUserId}
		,referrer = #{referrer}
		,team_name = #{teamName}
		,payment_pdf = #{paymentPdf}
		,status = #{status}
		,approver = #{approver}
		,approve_datetime = #{approveDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>


</mapper>