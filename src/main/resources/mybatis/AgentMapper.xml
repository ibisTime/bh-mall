	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="userId != null and userId != '' ">
				AND t.user_id = #{userId}
			</if>
			<if test="fromUserId != null and fromUserId != '' ">
				AND t.from_user_id = #{fromUserId}
			</if>
			<if test="highUserId != null and highUserId != '' ">
				AND t.high_user_id = #{highUserId}
			</if>
			<if test="loginName != null and loginName != '' ">
				AND t.login_name = #{loginName}
			</if>
			<if test="nickname != null and nickname != '' ">
				AND t.nickname like "%"#{nickname}"%"
			</if>

			
			<if test="level != null and level != '' ">
				AND t.level = #{level}
			</if>
			<if test="highLevel != null and highLevel != '' ">
				<![CDATA[AND t.level < #{highLevel}]]>
			</if>

			<if test="userReferee != null and userReferee != '' ">
				AND t.user_referee = #{userReferee}
			</if>
			<if test="mobile != null and mobile != '' ">
				AND t.mobile = #{mobile}
			</if>
			<if test="idKind != null and idKind != '' ">
				AND t.id_kind = #{idKind}
			</if>
			<if test="idNo != null and idNo != '' ">
				AND t.id_no = #{idNo}
			</if>

			<if test="realName != null and realName != '' ">
				AND t.real_name = #{realName}
			</if>
			
			<choose>
				<when test="statusList != null and statusList.size() >0 ">
					AND t.status IN
					<foreach collection="statusList" index="index" item="item"
						open="(" separator="," close=")">
						#{item}
					</foreach>
				</when>
				<when test="status != null and status != '' ">
					AND t.status = #{status}
				</when>
			</choose>

			<if test="updater != null and updater != '' ">
				AND t.updater = #{updater}
			</if>
			<if test="loginPwd != null and loginPwd != '' ">
				AND t.login_pwd = #{loginPwd}
			</if>
			<if test="unionId != null and unionId != '' ">
				AND t.union_id = #{unionId}
			</if>
			<if test="h5OpenId != null and h5OpenId != '' ">
				AND t.h5_open_id = #{h5OpenId}
			</if>
			<if test="appOpenId != null and appOpenId != '' ">
				AND t.app_open_id = #{appOpenId}
			</if>

			<if test="province != null and province != '' ">
				AND t.province = #{province}
			</if>
			<if test="provinceForQuery != null and provinceForQuery != '' ">
				AND t.province like "%"#{provinceForQuery}"%"
			</if>
			<if test="city != null and city != '' ">
				AND t.city = #{city}
			</if>
			<if test="cityForQuery != null and cityForQuery != '' ">
				AND t.city like "%"#{cityForQuery}"%"
			</if>
			<if test="area != null and area != '' ">
				AND t.area = #{area}
			</if>

			<if test="areaForQuery != null and areaForQuery != '' ">
				AND t.area like "%"#{areaForQuery}"%"
			</if>
			<if test="createDatetimeStart != null and createDatetimeStart != '' ">
				<![CDATA[AND t.create_datetime >= #{createDatetimeStart}]]>
			</if>
			<if test="createDatetimeEnd != null and createDatetimeEnd != '' ">
				<![CDATA[AND t.create_datetime <= #{createDatetimeEnd}]]>
			</if>
			<if test="teamName != null and teamName != '' ">
				AND t.team_name = #{teamName}
			</if>
			<if test="toUserId != null and toUserId != '' ">
				AND l.to_user_id = #{toUserId}
			</if>

			<if test="keyWord !=null and keyWord != '' ">
				AND t.real_name like "%"#{keyWord}"%" or t.nickname like
				"%"#{keyWord}"%" or t.wx_id like "%"#{keyWord}"%"
				or t.mobile like "%"#{keyWord}"%"
			</if>
		</trim>
	</sql>

	<select id="select_agent" parameterType="agent" resultMap="agent_DB_Result">
		SELECT
		t.user_id
		,t.from_user_id
		,t.login_name
		,t.mobile
		,t.wx_id
		,t.photo

		,t.nickname
		,t.trade_pwd

		,t.kind
		,t.level
		,t.apply_level
		,t.user_referee
		,t.introducer

		,t.high_user_id
		,t.team_name
		,t.id_kind
		,t.id_no
	
		,t.id_hand
		,t.real_name
		,t.status

		,t.manager
		,t.red_amount
		,t.union_id

		,t.h5_open_id
		,t.app_open_id
		,t.province
		,t.city
		,t.area

		,t.address
		,t.create_datetime
		,t.updater
		,t.update_datetime
		,t.approver

		,t.approve_datetime
		,t.last_agent_log
		,t.impower_datetime
		,t.remark
		FROM
		tbh_user t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_agent_count" parameterType="agent" resultType="java.lang.Long">
		SELECT count(1) FROM tbh_user t
		<include refid="where_condition" />
	</select>


	<insert id="insert_agent" parameterType="agent">
		INSERT INTO
		tbh_user(
		user_id
		,login_name
		,mobile
		,wx_id
		,photo

		,nickname
		,login_pwd
		,login_pwd_strength
		,kind
		,level

		,apply_level
		,user_referee
		,introducer
		,high_user_id
		,team_name

		,id_kind
		,id_no
		,id_hand

		,real_name
		,status

		,manager
		,union_id
		,h5_open_id
		,app_open_id

		,province
		,city
		,area
		,address
		,create_datetime

		,updater
		,update_datetime
		,approver
		,approve_datetime
		,last_agent_log

		,remark
		)
		VALUES(
		#{userId}
		,#{loginName}
		,#{mobile}
		,#{wxId}
		,#{photo}

		,#{nickname}
		,#{loginPwd}
		,#{loginPwdStrength}
		,#{kind}
		,#{level}

		,#{applyLevel}
		,#{userReferee}
		,#{introducer}
