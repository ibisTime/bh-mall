<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bh.mall.dao.ISpecsDAO">
	<resultMap id="specs_DB_Result" type="specs">
		<result column="code" property="code"/>
		<result column="product_code" property="productCode"/>
		<result column="is_single" property="isSingle"/>
		<result column="single_number" property="singleNumber"/>
		<result column="ref_code" property="refCode"/>
		
		
		<result column="name" property="name"/>
		<result column="number" property="number"/>
		<result column="stock_number" property="stockNumber"/>
		<result column="weight" property="weight"/>
		<result column="is_sq_order" property="isSqOrder"/>
		<result column="is_sj_order" property="isSjOrder"/>
		
		<result column="is_normal_order" property="isNormalOrder"/>
	</resultMap>
	
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != ''">
				AND t.code = #{code}
			</if>
			<if test="productCode != null and productCode != ''">
				AND t.product_code = #{productCode}
			</if>
			<if test="name != null and name != ''">
				AND t.name like "%"#{name}"%"
			</if>
			<if test="isSqOrder != null and isSqOrder !=''">
				AND t.is_sq_order  = #{isSqOrder}
			</if>
			<if test="isSjOrder != null and isSjOrder !=''">
				AND t.is_sj_order  = #{isSjOrder}
			</if>
			
			<if test="isNormalOrder != null and isNormalOrder !=''">
				AND t.is_normal_order  = #{isNormalOrder}
			</if>
			<if test="isSingle != null and isSingle !=''">
				AND t.is_single  = #{isSingle}
			</if>
			<if test="singleNumber != null and singleNumber !=''">
				AND t.single_number  = #{singleNumber}
			</if>
			<if test="refCode != null and refCode !=''">
				AND t.ref_code  = #{refCode}
			</if>
		</trim>
	</sql>
	
	<select id="select_specs" parameterType="specs" resultMap="specs_DB_Result">
		SELECT 
		t.code
		,t.product_code
		,t.is_single
		,t.single_number
		,t.ref_code
		
		,t.name
		,t.number
		,t.stock_number
		,t.weight
		
		,t.is_sq_order
		,t.is_sj_order
		,t.is_normal_order
		FROM tbh_specs t 
		<include refid="where_condition"/>
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				${order}
			</if>
		</trim>
	</select>
	
	
	<select id="select_specs_count" parameterType="specs" resultType="java.lang.Long">
		SELECT count(1) FROM tbh_specs t
		<include refid="where_condition"/>
	</select>
	
	<insert id="insert_specs" parameterType="specs">
		INSERT INTO tbh_specs(
		code
		,product_code
		,name
		,number
		,is_single
		,stock_number
		,weight
		
		,is_sq_order
		,is_sj_order
		,is_normal_order
		)
		VALUES(
		#{code}
		,#{productCode}
		,#{name}
		,#{number}
		,#{isSingle}
		,#{stockNumber}
		,#{weight}
		
		,#{isSqOrder}
		,#{isSjOrder}
		,#{isNormalOrder}
		)
	</insert>
	
	<update id="update_specs" parameterType="specs">
		UPDATE tbh_specs
		SET 
		is_single = #{isSingle}
		,single_number = #{singleNumber}
		,ref_code = #{refCode}
		,name = #{name}
		,number = #{number}
		,stock_number = #{stockNumber}
		
		,weight = #{weight}
		,is_sq_order = #{isSqOrder}
		,is_sj_order = #{isSjOrder}
		,is_normal_order = #{isNormalOrder}
		WHERE code=#{code}
	</update>
	
	<delete id="delete_byProductCode" parameterType="specs">
		DELETE FROM 
		tbh_specs 
		WHERE
		product_code = #{productCode}
	</delete>
	
	<delete id="delete_specs" parameterType="specs">
		DELETE FROM 
		tbh_specs 
		WHERE
		code = #{code}
	</delete>
	
	<update id="update_repertory">
		UPDATE tbh_specs 
		SET
		stock_number = #{stockNumber}
		WHERE 
		code = #{code}
	</update>
</mapper>