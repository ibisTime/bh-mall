<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bh.mall.dao.IInnerSpecsDAO">
	<resultMap id="innerSpecs_DB_Result" type="innerSpecs">
		<result column="code" property="code" />
		<result column="inner_product_code" property="innerProductCode" />
		<result column="name" property="name" />
		<result column="number" property="number" />
		<result column="weight" property="weight" />
		<result column="price" property="price" />
		<result column="ref_code" property="refCode" />
		<result column="is_single" property="isSingle" />
		<result column="single_number" property="singleNumber" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="innerProductCode != null and innerProductCode != '' ">
				AND t.inner_product_code = #{innerProductCode}
			</if>
			<if test="name != null and name != '' ">
				AND t.name = #{name}
			</if>
			<if test="price != null and price != '' ">
				AND t.price = #{price}
			</if>
			<if test="isSingle != null and isSingle != '' ">
				AND t.is_single = #{isSingle}
			</if>
		</trim>
	</sql>
	<select id="select_innerSpecs" parameterType="innerSpecs" resultMap="innerSpecs_DB_Result">
		SELECT
		code
		,inner_product_code
		,name
		,number
		,weight
		,price
		,ref_code
		,is_single
		,single_number
		FROM
		tbh_inner_specs t
		<include refid="where_condition" />
		<!-- order by t.update_datetime desc -->
	</select>

	<select id="select_innerSpecs_count" parameterType="innerSpecs" resultType="java.lang.Long">
		SELECT count(1) FROM tbh_inner_specs t
		<include refid="where_condition" />
	</select>

	<insert id="insert_innerSpecs" parameterType="innerSpecs">
		INSERT INTO tbh_inner_specs(
		code
		,inner_product_code
		,name
		,number
		,weight
		,price
		,ref_code
		,is_single
		,single_number
		)
		VALUES(
		#{code}
		,#{innerProductCode}
		,#{name}
		,#{number}
		,#{weight}
		,#{price}
		,#{refCode}
		,#{isSingle}
		,#{singleNumber}
		)
	</insert>

	<delete id="delete_innerSpecs" parameterType="innerSpecs">
		DELETE FROM tbh_inner_specs
		WHERE
		code = #{code}
	</delete>

	<update id="update_innerSpecs" parameterType="innerSpecs">
		UPDATE tbh_inner_specs SET
		inner_product_code = #{innerProductCode}
		,name = #{name}
		,number = #{number}
		,weight = #{weight}
		,price = #{price}
		,ref_code = #{refCode}
		,is_single = #{isSingle}
		,single_number = #{singleNumber}
		WHERE code = #{code}
	</update>
</mapper>
