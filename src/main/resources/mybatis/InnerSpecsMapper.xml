<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bh.mall.dao.IInnerSpecsDAO">
	<resultMap id="innerSpecs_DB_Result" type="innerSpecs">
		<result column="code" property="code"/>
		<result column="inner_product_code" property="innerProductCode"/>
		<result column="is_single" property="isSingle"/>
		<result column="single_number" property="singleNumber"/>
		<result column="ref_code" property="refCode"/>
		
		<result column="name" property="name"/>
		<result column="number" property="number"/>
		<result column="stock_number" property="stockNumber"/>
		<result column="weight" property="weight"/>
		<result column="price" property="price"/>
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != ''">
				AND t.code = #{code}
			</if>
			<if test="innerProductCode != null and innerProductCode != ''">
				AND t.inner_product_code = #{innerProductCode}
			</if>
			<if test="name != null and name != ''">
				AND t.name like "%"#{name}"%"
			</if>
			<if test="singleNumber != null and singleNumber !=''">
				AND t.single_number  = #{singleNumber}
			</if>
			<if test="refCode != null and refCode !=''">
				AND t.ref_code  = #{refCode}
			</if>
		</trim>
	</sql>
	<select id="select_innerSpecs" parameterType="innerSpecs" resultMap="innerSpecs_DB_Result">
		SELECT
		t.code
		,t.inner_product_code
		,t.is_single
		,t.single_number
		,t.ref_code
		
		,t.name
		,t.number
		,t.stock_number
		,t.weight
		,t.price
		FROM
		tbh_inner_specs t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_innerSpecs_count" parameterType="innerSpecs" resultType="java.lang.Long">
		SELECT count(1) FROM tbh_inner_specs t
		<include refid="where_condition" />
	</select>

	<insert id="insert_innerSpecs" parameterType="innerSpecs">
		INSERT INTO tbh_inner_specs(
		code
		,inner_product_code
		,name
		,number
		,stock_number
		,weight
		
		,price
		)
		VALUES(
		#{code}
		,#{innerProductCode}
		,#{name}
		,#{number}
		,#{stockNumber}
		,#{weight}
		
		,#{price}
		)
	</insert>

	<delete id="delete_innerSpecs" parameterType="innerSpecs">
		DELETE FROM tbh_inner_specs
		WHERE
		code = #{code}
	</delete>

	<update id="update_innerSpecs" parameterType="innerSpecs">
		UPDATE tbh_inner_specs SET
		is_single = #{isSingle}
		,single_number = #{singleNumber}
		,ref_code = #{refCode}
		,name = #{name}
		,number = #{number}
		,stock_number = #{stockNumber}
		
		,weight = #{weight}
		,price = #{price}
		WHERE code = #{code}
	</update>
	

	
</mapper>
