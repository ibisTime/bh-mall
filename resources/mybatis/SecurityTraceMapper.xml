<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bh.mall.dao.ISecurityTraceDAO">
	<resultMap id="securityTrace_DB_Result" type="securityTrace">
	
		<result column="security_code" property="securityCode" />
		<result column="trace_code" property="traceCode" />
		<result column="ref_code" property="refCode" />
		<result column="status" property="status" />
		<result column="order_code" property="orderCode" />
		
		<result column="number" property="number" />
		<result column="create_datetime" property="createDatetime" />
		<result column="use_datetime" property="useDatetime" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="securityCode != null and securityCode != '' ">
				AND t.security_code = #{securityCode}
			</if>
			<if test="traceCode != null and traceCode != '' ">
				AND t.trace_code = #{traceCode}
			</if>
			<if test="refCode != null and refCode != '' ">
				AND t.ref_code = #{refCode}
			</if>
			<choose>
				<when test="status != null and status != '' ">
					AND t.status = #{status}
				</when>
				<when test="statusList != null and statusList.size() > 0 ">
					AND t.status IN
					<foreach collection="statusList" index="index"  item="item" close="(" separator=","  open=")" >
						#{item}
					</foreach>
				</when>
			</choose>
			<if test="keyword != null and keyword != '' ">
				AND (t.trace_code = #{keyword} OR t.security_code = #{keyword} OR t.ref_code = #{keyword})
			</if>
			
			<if test="orderCode != null and orderCode != '' ">
				AND t.order_code = #{orderCode}
			</if>
		</trim>
	</sql>
	
	<select id="select_securityTrace" parameterType="securityTrace" resultMap="securityTrace_DB_Result">
		SELECT
		t.security_code
		,t.trace_code
		,t.ref_code
		,t.order_code
		,t.status
		,t.create_datetime
		,t.use_datetime
		FROM
		tbh_security_trace t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_code" parameterType="securityTrace" resultMap="securityTrace_DB_Result">
		SELECT
		t.security_code
		,t.trace_code
		FROM
		tbh_security_trace t
		<include refid="where_condition" />
	</select>

	<select id="select_securityTrace_count" parameterType="securityTrace"
		resultType="java.lang.Long">
		SELECT count(1) FROM tbh_security_trace t
		<include refid="where_condition" />
	</select>

	<insert id="insert_securityTrace" parameterType="securityTrace">
		INSERT INTO
		tbh_security_trace(
		security_code
		,trace_code
		,status
		,create_datetime
		)
		VALUES(
		#{securityCode}
		,#{traceCode}
		,#{status}
		,#{createDatetime}
		)
	</insert>

	<update id="update_securityTrace" parameterType="securityTrace">
		UPDATE tbh_security_trace
		SET
		ref_code = #{refCode}
		,status = #{status}
		WHERE security_code = #{securityCode}
	</update>
	
	<update id="update_status" parameterType="securityTrace">
		UPDATE tbh_security_trace
		SET
		status = #{status}
		,order_code = #{orderCode}
		,use_datetime = #{useDatetime}
		WHERE security_code = #{securityCode}
	</update>

	<update id="update_number" parameterType="securityTrace">
		UPDATE tbh_security_trace
		SET 
		number = #{number}
		WHERE security_code = #{securityCode}
	</update>

</mapper>